@model List<SWP391_HealthCareProject.Models.Campaign>
@{
    ViewData["Title"] = "Detail";
    Layout = "_Layout";
}



<div class="container top" style="text-align:center;">
    @foreach (var item in Model)
    {
    <h1 style="font-weight:600;font-size:3rem;">Campaign Information</h1>
    <span style="font-family:'Segoe UI light'">From hospital/red cross</span>
    <br />
    <p class="mt-5">
        Name: @item.Name
    </p>
    <p> 
        Start Date: @item.StartDate.ToString("dd/MM/yyyy")
    </p>
    <p>
            End date: @item.EndDate.ToString("dd/MM/yyyy")
    </p>
    <p class="">
        Location: @item.Province
    </p>
    <p class="mt-5">
        Lorem Ipsum is simply dummy text of the printing and typesetting industry.
