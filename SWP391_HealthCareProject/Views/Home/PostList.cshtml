@model List<SWP391_HealthCareProject.Models.Post>
@{
    ViewData["Title"] = "Post List";
    Layout = "_Layout";
}

<div class="banner">   
    <div class="h-100 layer">
        <div class="row h-100 align-items-center">
            <div class="col-12 text-center">
                <h1 class="header-text">Post</h1>
            </div>
        </div>
    </div>
</div>



<section class="py-5" id="content">
    <div class="container">
        <!-- First 3 cards -->
        <div class="row ">
            @foreach (var item in Model)
            {
            <div class="col-lg-4 col-md-6 d-flex justify-content-center">
                <div class="card " style="width: 18rem;">
                    <img class="card-img-top"
                         src="http://hoichuthapdohanoi.vn/uploads/news/2020_02/hm-xuan-hong2.jpg"
                         alt="Card image cap">
                    <div class="card-body">
                        <h1 class="card-title">@item.Title</h1>
                        <p class="card-text">
                            @item.Description
                        </p>
                        <a>@Html.ActionLink("Read More","Index","Post", new {id=item.PostId})</a>
                    </div>
                </div>
            </div>
            }
           
        </div>
    </div>
</section>
