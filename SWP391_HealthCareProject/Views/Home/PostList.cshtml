@{
    ViewData["Title"] = "Post List";
    Layout = "_Layout";
    
}

<div class="banner">   
    <div class="h-100 layer">
        <div class="row h-100 align-items-center">
            <div class="col-12 text-center">
                <h1 class="header-text">Post</h1>
            </div>
        </div>
    </div>
</div>



<section class="py-5" id="content">
    <div class="container">
        <!-- First 3 cards -->
        <div class="row ">
            <div class="col-lg-4 col-md-6 d-flex justify-content-center">
                <div class="card " style="width: 18rem;">
                    <img class="card-img-top" asp-for="PostImg"
                         src=@ViewBag.Post.Img
                         alt="Card image cap">
                    <div class="card-body">
                        <h1 class="card-title">@ViewBag.Post.Title</h1>
                        <p class="card-text">
                            @ViewBag.Description
                        </p>
                        <a href="#">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top"
                         src="https://www.eatthis.com/wp-content/uploads/sites/4/2021/09/doctors-face-mask-hospital.jpg?quality=82&strip=1"
                         alt="Card image cap">
                    <div class="card-body">
                        <h1 class="card-title">Title</h1>
                        <p class="card-text">
                            Some quick example text to build on the card title and make up the bulk of the card's
                            content.
                        </p>
                        <a href="#">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top"
                         src="https://media.istockphoto.com/photos/doctor-holding-digital-tablet-at-meeting-room-picture-id1189304032?k=20&m=1189304032&s=612x612&w=0&h=ovTNnR0JX2cRZkzMBed9exRO_PamZLlysLDFkXesr4Q="
                         alt="Card image cap">
                    <div class="card-body">
                        <h1 class="card-title">Title</h1>
                        <p class="card-text">
                            Some quick example text to build on the card title and make up the bulk of the card's
                            content.
                        </p>
                        <a href="#">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
