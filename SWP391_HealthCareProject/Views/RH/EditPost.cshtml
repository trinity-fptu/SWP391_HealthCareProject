@model SWP391_HealthCareProject.Models.Post

@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_LayoutAdminRH.cshtml";
}

<div class="container py-5">
    <h1>EditPost</h1>
    <hr />
    <div class="row">
        <div class="col-12">
            <form asp-action="EditPost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostId" class="control-label">PostID: @Model.PostId</label>
                    <input asp-for="PostId" type="hidden" class="form-control" />
                    <span asp-validation-for="PostId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" type="text" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" type="" class="form-control" style="height:300px;">

                </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

