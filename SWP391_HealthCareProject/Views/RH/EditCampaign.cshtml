@model SWP391_HealthCareProject.Models.Campaign

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdminRH.cshtml";
}

<div class="container py-4">
    <h1>Edit Campaign</h1>

    <h4>Campaign</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCampaign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CampaignId" class="control-label">Campaign ID: @Model.CampaignId</label>
                    <input asp-for="CampaignId" type="hidden" class="form-control" />
                    <span asp-validation-for="CampaignId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumOfVolunteer" class="control-label"></label>
                    <input asp-for="NumOfVolunteer" class="form-control" disabled/>
                    <span asp-validation-for="NumOfVolunteer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Province" class="control-label"></label>
                    <input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlanId" class="control-label"></label>
                    <input asp-for="PlanId" class="form-control" />
                    <span asp-validation-for="PlanId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


