@model User
@{
    ViewBag.Title = "Login Page";
    Layout = "_LayoutLogin";
}


<!-- body -->
<section id="login" class="mx-auto my-lg-5 my-5">
    <div class="head">
        <h1>Login</h1>
        <span>Welcome Back</span>
    </div>
    <div class="holder">
        <form method="post" asp-controller="Login" asp-action="Validate">
            <input type="text" asp-for="UserName" placeholder="username" class="username" style="box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                border: none;width: 20rem;height: 3rem;padding: 1.5rem;margin-top: 3rem;border-radius: 12px;" required />

            <br />
            <input type="password" asp-for="Password" placeholder="password" class="a my-4" style="box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                border: none;width: 20rem;height: 3rem;padding: 1.5rem;margin-top: 3rem;border-radius: 12px;" required />
            <div class="d-flex justify-content-end mb-3">
                <a href="#">Forgot Password?</a>
            </div>
            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="login-btn">Log In</button>
            </div>
        </form>  
        
        <br>
        <div class="register d-flex justify-content-start">
            <span>Dont have an account? <a href="/Signup/Signup">Register Now</a></span>
        </div>
    </div>
</section>


